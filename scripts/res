#!/bin/bash

if [ $# -ne 1 ]; then
  echo "Usage: $0 <maxj_project_dir>"
  exit -1
fi

CSV_FILE=results.csv

## Create the required output directory structure
mkdir -p ./summaries/$1/src
mkdir -p ./summaries/$1/clks
mkdir -p ./summaries/$1/map

## Copy required files from synthesis results
cp ./$1/Top_MAX4848A_DFE/src_annotated/engine/* ./summaries/$1/src
cp ./$1/Top_MAX4848A_DFE/scratch/altera_quartus/ct1/altera_quartus/MAX4MAIAPeripheryTop.fit.rpt ./$1.rpt
files=(`ls ./$1/Top_MAX4848A_DFE/scratch/altera_quartus/ct1/altera_quartus/`)
fatal=true
for f in ${files[@]}; do
    if [[ "$f" = *"MAX4MAIAPeripheryTop.sta.rpt."* ]]; then
        fatal=false
    fi
done
if [[ "$fatal" = *"true"* ]]; then
    # echo "Couldn't find sta file. Exiting"
    exit 1
fi
cp ./$1/Top_MAX4848A_DFE/scratch/altera_quartus/ct1/altera_quartus/MAX4MAIAPeripheryTop.sta.rpt.* ./summaries/$1/clks
cp ./$1/Top_MAX4848A_DFE/scratch/altera_quartus/map/altera_quartus/MAX4MAIAPeripheryTop.merge.rpt ./summaries/$1/map/$1.merge.rpt

## Extract summary into a ".summary" file
./summarize $1

## Extract values from summary into CSV, replacing the old csv if it exists
rm -f ./summaries/$1/$CSV_FILE
./extract_fields.sh $1.summary ./summaries/$1/$CSV_FILE

## Move reports and summaries into the output directory
mv $1.rpt summaries/$1/
mv $1.summary summaries/$1/
